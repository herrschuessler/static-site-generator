{
  "root": {
    "src": "./src",
    "dev": "./stage",
    "build": "./public"
  },

  "templates": "gulpfile.js/templates",

  "tasks": {

    "css": {
      "src": "sass",
      "dest": "css",
      "autoprefixer": {
        "browsers": ["last 3 versions","ie 9"]
      },
      "extensions": ["sass", "scss", "css"]
    },

    "html": {
      "src": "jade",
      "dest": "./",
      "extensions": ["jade"]
    },

    "js": {
      "src": "js",
      "dest": "js",
      "extensions": ["js"]
    },

    "svgCssSprite": {
      "src": "svg/css",
      "css": "sass/02-tools/_generated.tool.svgsprites.scss",
      "dest": "img/svg-sprites",
      "extensions": ["svg"]
    },

    "svgSymbolSprite": {
      "src": "svg/symbol",
      "dest": "img/svg-sprites",
      "extensions": ["svg"]
    },

    "images": {
      "src": "img",
      "dest": "img",
      "extensions": ["jpg", "png", "svg", "gif"]
    },

    "fonts": {
      "src": "fonts",
      "dest": "fonts",
      "extensions": ["woff2", "woff", "eot", "ttf", "svg"]
    }
  }
}